{
  "name": "gql2ts-base",
  "private": true,
  "version": "1.0.0",
  "description": "Convert GraphQL Schema to TypeScript defs",
  "dependencies": {
    "graphql": ">= 0.10 <15",
    "prettier": "^1.10.2"
  },
  "devDependencies": {
    "@types/graphql": "^0.13.4",
    "@types/jest": "^23.3.1",
    "@types/node": "^10.5.5",
    "coveralls": "^3.0.0",
    "jest": "^23.4.2",
    "lerna": "2.3.1",
    "ts-jest": "^23.1.3",
    "ts-node": "^7.0.0",
    "tslint": "^5.5.0",
    "typescript": "^2.4.1"
  },
  "scripts": {
    "pretest": "lerna bootstrap --hoist graphql",
    "test": "jest --coverage --forceExit --runInBand",
    "coverage": "cat ./coverage/lcov.info | coveralls"
  },
  "keywords": [
    "typescript",
    "graphql"
  ],
  "author": "Brett Jurgens <brett.jurgens@avant.com> (https://www.avant.com)",
  "license": "MIT",
  "repository": "avantcredit/gql2ts",
  "bin": {
    "gql2ts": "./index.js"
  },
  "engines": {
    "node": ">=4.0.0"
  },
  "perferGlobal": true,
  "jest": {
    "collectCoverageFrom": [
      "**/src/**/*.ts",
      "!packages/cli/**",
      "!**/*.d.ts",
      "!**/__tests__/**/*.ts"
    ],
    "testEnvironment": "node",
    "globals": {
      "ts-jest": {
        "tsConfigFile": "packages/cli/tsconfig.json"
      }
    },
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "testRegex": "(/__tests__/.*-test)\\.(ts|tsx|js)$"
  }
}
